{
  "name": "edk2-uni-formatter",
  "displayName": "EDK2 uni formatter",
  "description": "",
  "icon": "img/icon/Uni.png",
  "version": "1.3.1",
  "publisher": "pinshengjuan",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Formatters"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pinshengjuan/edk2-uni-formatter"
  },
  "activationEvents": [
    "onLanguage:edk2_uni",
    "onCommand:edk2-uni-formatter.keybinding"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "edk2-uni-formatter.keybinding",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "when": "resourceLangId == edk2_uni"
      }
    ],
    "languages": [
      {
        "id": "edk2_uni",
        "extensions": [
          ".uni"
        ]
      }
    ],
    "configuration": {
      "title": "EDK2 uni formatter",
      "properties": {
        "edk2-uni-formatter.spaceBetweenTokenAndLanguageCode": {
          "type": "number",
          "default": 8,
          "minimum": 1,
          "description": "Provide space numbers between identifier and LanguageCodes.\nRefer: https://edk2-docs.gitbook.io/edk-ii-uni-specification/2_unicode_strings_file_format"
        },
        "edk2-uni-formatter.endOfLineWith": {
          "type": "string",
          "default": "CRLF",
          "enum": [
            "LF",
            "CRLF",
            "CR",
            "LFCR"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "edk2-uni-formatter.keybinding",
        "when": "resourceLangId == edk2_uni",
        "title": "EDK2 uni formatter keybinding"
      },
      {
        "command": "edk2-uni-formatter.formatUniEditor",
        "title": "Format Document"
      },
      {
        "command": "edk2-uni-formatter.formatUniExplorer",
        "title": "Format Document"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == edk2_uni",
          "command": "edk2-uni-formatter.formatUniEditor",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == edk2_uni",
          "command": "edk2-uni-formatter.formatUniExplorer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "chardet": "^1.4.0"
  }
}
